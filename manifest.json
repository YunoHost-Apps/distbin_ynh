{
    "name": "Distbin",
    "id": "distbin",
    "packaging_format": 1,
    "description": {
        "en": "Distbin package for YunoHost application.",
        "fr": "Package dâ€™application Distbin pour YunoHost."
    },
    "version": "1.0~ynh1",
    "url": "https://example.com",
    "license": "Apache-2.0",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com",
        "url": "http://example.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.14"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for distbin",
                    "fr": "Choisissez un nom de domaine pour distbin"
                },
                "example": "distbin.example.com"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
